{
  "name": "social-trends",
  "version": "1.0.0",
  "description": "MERN Stack Social Media App (Instagram, Facebook, Twitter clone)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",                       
    "server": "nodemon server.js",                  
    "client": "cd client && npm start",              
    "server-install": "npm install",                
    "client-install": "cd client && npm install",   
    "install-all": "npm run server-install && npm run client-install", 
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },    
  "dependencies": {
    "@cloudinary/react": "^1.9.0",
    "@cloudinary/url-gen": "^1.8.7",
    "bcrypt": "^5.0.0",
    "catchmail": "^1.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "maildev": "^2.0.5",
    "mongoose": "^5.11.13",
    "nodemailer": "^6.9.1",
    "peer": "^0.6.1",
    "react-toastify": "4.1",
    "socket.io": "^3.1.2",
    "concurrently": "^6.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": ">=14.x"
  }
}

